<!-- INITIAL SIGN UP MESSAGE -- END -->


<!-- BEGIN PlACE PAGE CONTENT HERE -->



<% @lead_streams.each_slice(2) do |row| %>
  <div class="row">
    <% row.each do |lead_stream| %>
      <div class="col-md-6">
        <div class="grid simple">
          <div class="grid-body">
            <div>
              <h3>
                <span class="semi-bold"><a href="/dashboard/leads/<%= lead_stream.id %>"><%= lead_stream.name.nil? ? "Leads in #{lead_stream.city_name}":lead_stream.name %></a></span>
                <!--<a href="/dashboard/lead_streams/<%= lead_stream.id %>/edit" style="float: right;" class="btn btn-small">Edit Stream</a>-->
                <button class="btn btn-small edit-stream" data-toggle="modal" data-target="#myModal" style="float: right;" data-id="<%=  lead_stream.id%>">Edit Keywords</button>
              </h3>

              <% keywords = Keyword.where(lead_stream_id: lead_stream.id).where(admin_created: nil).where.not(archived: true) %>

              <% if keywords.empty? %>

                <div class="alert m-t-20">
                  Looks like there are not leads yet. We will send you an email as soon as we find your first lead
                </div>

              <% else %>
                <table class="table table-striped" id="<%= lead_stream.id %>">
                  <thead>
                  <tr>
                    <th>Keyword</th>
                    <th>Leads Today</th>
                    <th>Tweets Processed</th>

                  </tr>
                  </thead>

                  <% keywords.each do |keyword| %>
                    <tr id="keyword_<%= keyword.id %>">
                      <td><%= keyword.term %></td>
                      <% lead_count = Lead.where(keyword_id: keyword.id).where("created_at >= ?", Time.zone.now.beginning_of_day).count %>
                      <td>
                        <% if lead_count > 0 %>
                          <span class="label label-success"><%= lead_count %></span>
                        <% else %>
                          <span class="label label-important"><%= lead_count %></span>
                        <% end %>
                      </td>

                      <% tweet_count = UnprocessedTweet.where(keyword_id: keyword.id).count %>
                      <td>
                        <span class="bold"><%= tweet_count %></span>
                      </td>
                    </tr>
                  <% end %>

                </table>

                <a href="/dashboard/leads/<%= lead_stream.id %>" class="btn btn-primary btn-small">View All Leads Now</a>
              <% end %>



            </div>

          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


