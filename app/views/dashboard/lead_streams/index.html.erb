<% @lead_streams.each_slice(2) do |row| %>
  <div class="row">
    <% row.each do |lead_stream| %>
      <div class="col-md-6">
        <div class="grid simple">
          <div class="grid-body">
            <div>
              <h3>
                <span class="semi-bold"><a href="/dashboard/leads/<%= lead_stream.id %>"><%= lead_stream.name.nil? ? "Leads in #{lead_stream.city_name}":lead_stream.name %></a></span>
                <a href="/dashboard/lead_streams/<%= lead_stream.id %>/edit" style="float: right;" class="btn btn-small">Edit Stream</a>
              </h3>



              <div class="row">
                <div class="col-md-6">
                  <div class="mini-chart-wrapper">
                    <div class="chart-details-wrapper">
                      <div class="chartname"> Weeks Leads </div>
                      <div class="chart-value"> 17,555 </div>
                    </div>
                    <div class="mini-chart">
                      <div id="mini-chart-orders"><canvas height="30" width="62" style="display: inline-block; width: 62px; height: 30px; vertical-align: top;"></canvas></div>
                    </div>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mini-chart-wrapper">
                    <div class="chart-details-wrapper">
                      <div class="chartname"> Months Leads </div>
                      <div class="chart-value"> $17,555 </div>
                    </div>
                    <div class="mini-chart">
                      <div id="mini-chart-other"><canvas height="30" width="62" style="display: inline-block; width: 62px; height: 30px; vertical-align: top;"></canvas></div>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>


