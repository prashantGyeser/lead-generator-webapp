<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <!--<div class="leads_container">-->
        <!--lead list-->
      <!--</div>-->


      <table class="leads_table">
        <tr>
          <th>Screename</th>
          <th>Tweet</th>
        </tr>

        <% @leads.each do |lead|  %>
          <tr>
            <% profile_url = 'https://twitter.com/' + lead.screen_name %>
            <td><%= link_to lead.screen_name, profile_url %></td>
            <td><%= lead.tweet %></td>
          </tr>

          <tr class="reply">
            <td colspan="2">
              <div class="row">

                <%= form_for @tweet_reply, :url => { :action => "send_reply"} do |f| %>

                    <% messages = TweetReply.where(:user_id => lead.user_id).where(:lead_id => lead.id) %>

                    <% if messages.count > 0 %>
                    <div class="col-md-12">
                      <%= image_tag "status_available.png", :style => "margin-right: 10px;" %> Message sent
                    </div>

                    <% else %>
                    <div class="col-md-10">

                      <%= f.text_field :message, :placeholder => "Reply to #{lead.screen_name}", :required => true %>
                      <%= f.hidden_field :lead_id, :value => lead.id %>
                      <%= f.hidden_field :user_id, :value => lead.user_id %>
                    </div>
                    <div class="col-md-2">
                      <button name="commit" type="submit" value="Reply">Reply</button>
                    </div>
                    <% end %>


                <% end %>

              </div>
            </td>
          </tr>
        <% end %>

      </table>

    </div>
  </div>
</div>