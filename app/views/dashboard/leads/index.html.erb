          <div class="row">
            <div class="col-md-1">
              <%= image_tag "no-profile-pic.png", class: "img-responsive" %>
            </div>
            <div class="col-md-9">
              <div class="tweet">
                <span class="bold screen_name"><a href="#" class="sample">@<%= sample_lead.screen_name %></a></span>
                <%= sample_lead.tweet %>
              </div>
            </div>
	    <div class="col-md-2">
              <div class="actions">
