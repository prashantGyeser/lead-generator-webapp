<h1>Listing lead_streams</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lead_streams.each do |lead_stream| %>
      <tr>
        <td><%= lead_stream.user_id %></td>
        <td><%= lead_stream.category_id %></td>
        <td><%= lead_stream.city_id %></td>
        <td><%= link_to 'Show', lead_stream %></td>
        <td><%= link_to 'Edit', edit_lead_stream_path(lead_stream) %></td>
        <td><%= link_to 'Destroy', lead_stream, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lead stream', new_lead_stream_path %>
