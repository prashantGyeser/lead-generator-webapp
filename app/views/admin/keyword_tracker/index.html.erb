<div class="page-header">
  <h1>
    Keywords
  </h1>

</div>

<div class="opportunities">

  <table>

    <tr>
      <th>Id</th>
      <th>Keyword</th>
      <th>Archived</th>
      <th>Last Results Count</th>
      <th>Last Duplicate Count</th>
      <th>Last Searched</th>
      <th>Last Run</th>
    </tr>


    <% @keywords.each do |keyword| %>


      <tr>
        <td>
          <%= keyword.id %>
        </td>
        <td>
          <%= keyword.term %>
        </td>
        <td>
          <% if keyword.archived? %>
            <div class="default_label">
              Archived
            </div>
          <% end %>
        </td>
        <td>
          <%= keyword.last_result_count %>
        </td>
        <td>
          <%= keyword.last_duplicate_count %>
        </td>
        <td>
          <%= keyword.last_searched %>
        </td>
        <td>
          <%= keyword.last_run %>
        </td>
      </tr>
    <% end %>

  </table>





</div>
