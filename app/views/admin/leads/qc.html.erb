<div class="page-header">
  <h1>
    Unchecked Tweets

    <!-- Button trigger modal -->
    <button type="button" class="btn btn_primary" data-toggle="modal" data-target="#myModal" style="width: inherit; float: right;">
      View Keywords
    </button>
  </h1>




  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Keywords</h4>
        </div>
        <div class="modal-body">
          <!-- Keyword list -- start -->

          <table class="keyword_list_modal">
            <% @keywords.each do |keyword_id| %>
              <tr>
                <% keyword = Keyword.find(keyword_id) %>
                <td>
                  <% if keyword.archived == true %>
                    <%= keyword.term %>
                  <% elsif keyword.admin_created == true %>
                    <span style="color: #1ABC9C" class="bold"><%= keyword.term %></span>
                  <% else %>
                    <span class="bold"><%= keyword.term %></span>
                  <% end %>
                </td>

                <td>
                  <%= keyword.last_result_count %>
                </td>

                <td class="actions">
                  <i class="fa fa-exclamation-triangle"></i>
                </td>

              </tr>
            <% end %>
          </table>



          <!-- Keyword list -- end -->
        </div>
      </div>
    </div>
  </div>



</div>

<div class="opportunities">

  <div class="keywords">
    <span>Keywords: </span>

    <% @keywords.each do |keyword_id| %>
      <% keyword = Keyword.find(keyword_id) %>

      <% if keyword.archived == true %>
        <span style="margin-left: 15px;"><%= keyword.term %></span>
      <% elsif keyword.admin_created == true %>
        <span style="margin-left: 15px; color: #1ABC9C"><%= keyword.term %></span>
      <% else %>
        <span style="margin-left: 15px;" class="bold"><%= keyword.term %></span>
      <% end %>


    <% end %>











  </div>

  <div class="city">
    <span>City: </span>
    <span><%= @lead_stream.city_name %></span>
  </div>


  <div class="invite_user_form" style="margin-top: 20px;">

    <input type="text" placeholder="Enter keyword" id="keyword_field"/>
    <button type="submit" id="submit_keyword" class="btn btn_primary" style="width: inherit" data-lead-stream-id="<%= @lead_stream.id %>">Add keyword</button>

    <%# form_for User.new, :url => user_invitation_path, :html => {:method => :post} do |f| %>
    <%# devise_error_messages! %>

    <%# f.text_field :email, placeholder: "Email of user to invite" %>
    <%# f.submit "Invite User", class: "btn btn_secondary", style: "width: inherit;" %>
    <%# end %>

  </div>




  <ul>

    <% @unprocessed_tweets.each do |unprocessed_tweet| %>
      <li>
        <div class="row">
          <div class="col-md-7">
            <div class="tweet">
              <%= unprocessed_tweet.tweet_body %>
            </div>
          </div>
          <div class="col-md-2">
            <div class="actions">
              <a href="#" class="btn btn_primary btn_block is_lead" data-id="<%= unprocessed_tweet.id %>" data-is-lead="true">Lead</a>
              <a href="#" class="btn btn_alert btn_block is_lead" style="margin-top: 10px;" data-id="<%= unprocessed_tweet.id %>" data-is-lead="false">Not lead</a>
            </div>
          </div>
        </div>
      </li>
    <% end %>



  </ul>
</div>